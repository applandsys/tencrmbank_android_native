<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_purple"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <!--top navigation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@color/light_purple"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="m" />


        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@color/light_purple"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/settings"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="m" />

        <ImageButton
            android:id="@+id/offer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@color/light_purple"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gift_card"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="m" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_purple"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/information"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="m" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--login form-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:backgroundTint="@color/light_purple"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp">

                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:background="@drawable/ic_bg_edit_txt"
                        android:drawableRight="@drawable/ic_baseline_info_24"
                        android:hint="@string/mobile_number"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <EditText
                        android:id="@+id/loin_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_bg_edit_txt"
                        android:drawableRight="@drawable/ic_baseline_info_24"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />



                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_gradient_circular"
                        android:drawableLeft="@drawable/ic_baseline_login_24"
                        android:drawablePadding="8dp"
                        android:text="@string/login"
                        android:textSize="@dimen/_18sdp" />
                    <TextView
                        android:id="@+id/password_reset_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:text="@string/password_reset"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txy_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:text="@string/no_account_register"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!--title bar-->
                <LinearLayout
                    android:id="@+id/buy_chips"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/ic_home_gradient"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:targetApi="m">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/chips_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/buy_chips"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />


                </LinearLayout>

                <!--column one-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_96sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!--vip-card-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical"
                        tools:targetApi="m">

                        <LinearLayout
                            android:id="@+id/vip_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:scaleType="fitCenter"
                                android:src="@drawable/vip_icon" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/vip"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--gullak-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/gullak"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:paddingLeft="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/gullak" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/gullak"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--gold pass-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/gold_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:paddingRight="18dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/gold_pass" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/gold_pass"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <!--column two-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!--gift-card-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/gift_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_google_play" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/gift_card"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>



                    </LinearLayout>

                    <!--free-fire-->
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/free_fire"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:padding="4dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/diamond" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/free_fire"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--pubg-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/deep_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/pubg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/deep_purple"
                                android:scaleType="fitCenter"
                                android:src="@drawable/uc_icon" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:text="@string/pubg"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456" />
</LinearLayout>